    // Palavra animada fixa no topo
    const palavraAnimadaEl = document.getElementById('palavra-animada');
    let palavraIndex = 0;

    function mostrarPalavra() {
      const span = document.createElement('span');
      span.textContent = capitalize(objetos[palavraIndex].nome);
      span.classList.add('fade-in-out');

      palavraAnimadaEl.innerHTML = '';
      palavraAnimadaEl.appendChild(span);

      palavraIndex++;
      if (palavraIndex >= objetos.length) palavraIndex = 0;

      setTimeout(mostrarPalavra, 4000);
    }

    function capitalize(str) {
      return str.charAt(0).toUpperCase() + str.slice(1);
    }

    mostrarPalavra();

    // Jogo
    let objetoAtual;
    let dicaIndex = 0;

    function escolherNovoObjeto() {
      objetoAtual = objetos[Math.floor(Math.random() * objetos.length)];
      dicaIndex = 0;
      document.getElementById("dica").textContent = "üïµÔ∏è Tente adivinhar o objeto oculto!";
      document.getElementById("resposta").textContent = "";
      const input = document.getElementById("palpite");
      input.value = "";
      input.disabled = false;
      document.getElementById("btnReiniciar").style.display = "none";
      document.getElementById("btnEnviar").disabled = false;
      input.focus();
    }

    function verificarPalpite() {
      const entrada = document.getElementById("palpite").value.trim().toLowerCase();
      const dicaElemento = document.getElementById("dica");
      const respostaElemento = document.getElementById("resposta");

      if (!entrada) {
        respostaElemento.textContent = "Digite algo antes de enviar.";
        return;
      }

      if (entrada === objetoAtual.nome) {
        respostaElemento.textContent = "‚úÖ Acertou! Preparando pr√≥ximo objeto...";
        document.getElementById("palpite").disabled = true;
        document.getElementById("btnEnviar").disabled = true;
        setTimeout(() => {
          escolherNovoObjeto();
          respostaElemento.textContent = "";
        }, 2500);
      } else {
        if (dicaIndex < objetoAtual.dicas.length) {
          dicaElemento.textContent = `üí° Dica ${dicaIndex + 1}: ${objetoAtual.dicas[dicaIndex]}`;
          respostaElemento.textContent = "‚ùå Tente novamente.";
          dicaIndex++;
        } else {
          dicaElemento.textContent = "‚õî Fim das dicas!";
          respostaElemento.textContent = `O objeto era: "${objetoAtual.nome}".`;
          document.getElementById("btnReiniciar").style.display = "inline-block";
          document.getElementById("palpite").disabled = true;
          document.getElementById("btnEnviar").disabled = true;
        }
      }
      document.getElementById("palpite").value = "";
      document.getElementById("palpite").focus();
    }

    function reiniciarJogo() {
      escolherNovoObjeto();
      document.getElementById("resposta").textContent = "";
    }

    escolherNovoObjeto();
